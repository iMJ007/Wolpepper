<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/cardview_dark_background"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <ImageView
            android:id="@+id/list_cover_image_view"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="centerCrop"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/colorStatusBar" />

        <TextView
            android:id="@+id/list_name_tv"
            android:fontFamily="@font/spacemono_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="List Name"
            android:textColor="@color/textColor"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_marginBottom="4dp"
            android:id="@+id/active_list_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:fontFamily="@font/spacemono_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_done_all_white_24dp"
                android:text="Active List"
                android:textColor="@color/textColor"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/delete_list_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_delete_sweep_white_24dp"
            android:tint="@color/white" />

        <LinearLayout
            android:layout_marginBottom="4dp"
            android:id="@+id/set_list_as_active_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/spacemono_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_done_white_24dp"
                android:text="Activate"
                android:textColor="@color/textColor"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>