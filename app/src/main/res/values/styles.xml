<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/spacemono_regular</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="faboptions" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorSecondary">@color/activeTab</item>
        <item name="colorOnSecondary">@color/inactiveTab</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!--Text Styles-->
    <style name="headingText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="subText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/spacemono_regular</item>
    </style>

    <style name="MyCustomTabsTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="tabTextColor">@color/inactiveTab</item>
        <item name="tabSelectedTextColor">@color/activeTab</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/spacemono_regular</item>
    </style>

    <style name="MyCustomTabs" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#FFFFFF</item>
    </style>

    <style name="Alerter_title_appearance">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Alerter_title_color">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="alerter_overall_text_with_color">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.NavigationView" >
        <item name="android:listDivider">@color/subTextColor</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.CheckBoxView" >
        <item name="colorAccent">@color/subTextColor</item>
        <item name="selectableItemBackground">@color/subTextColor</item>
        <item name="colorControlNormal">@color/subTextColor</item>
    </style>

    <style name="alertTitle" parent="AlertTextAppearance.Title">
        <item name="android:fontFamily">@font/spacemono_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="alertBody" parent="AlertTextAppearance.Text">
        <item name="android:fontFamily">@font/spacemono_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="circleImageView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
